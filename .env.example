# Application Configuration
APP_NAME=Multilingual Agentic RAG
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=true

# Security
SECRET_KEY=your-secret-key-change-in-production
API_KEY=your-api-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=["*"]
CORS_ALLOW_HEADERS=["*"]

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# Ollama Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=mistral
OLLAMA_TEMPERATURE=0.7
OLLAMA_TOP_P=0.9
OLLAMA_MAX_TOKENS=2048
OLLAMA_TIMEOUT=120
OLLAMA_RETRY_ATTEMPTS=3
OLLAMA_RETRY_DELAY=2

# Qdrant Configuration
QDRANT_HOST=qdrant
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_TIMEOUT=30
QDRANT_COLLECTION_NAME=documents
QDRANT_VECTOR_SIZE=384
QDRANT_DISTANCE_METRIC=Cosine

# Embedding Model Configuration
EMBEDDING_MODEL=sentence-transformers/multilingual-e5-large
EMBEDDING_BATCH_SIZE=32
EMBEDDING_DEVICE=cpu

# Language Configuration
SUPPORTED_LANGUAGES=["en","es","fr","zh","ar"]
DEFAULT_LANGUAGE=en
LANGUAGE_DETECTION_CONFIDENCE_THRESHOLD=0.5

# Document Processing
MAX_FILE_SIZE_MB=50
CHUNK_SIZE=512
CHUNK_OVERLAP=51
SUPPORTED_FILE_TYPES=["pdf","txt","md","json","csv"]

# Agent Configuration
AGENT_TIMEOUT=30
AGENT_MAX_RETRIES=3
ENABLE_AGENT_LOGGING=true



# Feature Flags
ENABLE_VALIDATION_AGENT=true
ENABLE_FACT_CHECKING=true
ENABLE_CITATION_VERIFICATION=true
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

